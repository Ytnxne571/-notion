name: 微信读书同步

on:
  workflow_dispatch:
  schedule:
    - cron: "0 0 * * *"

jobs:
  同步阅读进度:
    name: 同步阅读进度
    runs-on: ubuntu-latest
    steps:
      - name: 检出源代码
        uses: actions/checkout@v2

      - name: 配置 Python 环境
        uses: actions/setup-python@v2
        with:
          python-version: 3.9

      - name: 安装依赖
        run: |
          python -m pip install --upgrade pip
          pip install -r requirements.txt

      - name: 同步阅读进度
        run: |
          # 同步阅读进度到 Notion 数据库
          python sync_reading_progress.py "${{secrets.微信读书 Cookie}}" "${{secrets.Notion API Token}}" "${{secrets.Notion 数据库 ID}}"
